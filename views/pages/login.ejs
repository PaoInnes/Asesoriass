<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Asesoríass P6</title>
    <link rel="stylesheet" href="/styles/login.css">
  </head>
  <body style="background:#e0afa0;">
      <div class="container" style="margin-top: 5%;border-radius:10px;">
        <div class="modal-content" style="background: #f4f3ee;">
          <div class="modal-header">
            <h5 class="modal-title" id="modalll">Iniciar sesión</h5>
            <div id="icon_login"><i class="fa fa-sign-in" style="font-size:60px;color:#8a817c"></i></div>
          </div>
          <div class="modal-body">
            <% if (typeof error != "undefined") { %>
              <div class="alert alert-danger"><%= error %></div>
            <% } %>
            <form action="/login" method="post">
              <div class="form-group">
                <label for="recipient-name" class="col-form-label">Número de cuenta</label>
                <input type="text" class="form-control" name="accountNumberIn">
              </div>
              <div class="form-group">
                <label for="message-text" class="col-form-label">Contraseña</label>
                <input type="password"class="form-control" name="password"></input>
              </div>
              <div class="modal-footer">
                <input type="submit" id="login" class="btn btn-primary" value="Ingresar"/>
              </div>
            </form>
          </div>
        </div>
      </div>
  </body>
</html>
