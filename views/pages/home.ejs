<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
  </head>
  <body>
    <!--Modal de asesorías (las odio pq son lasrgas pero hermosas) -->
    <div class="modal fade"  tabindex="-1" id="modalAse" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header headerAse">
            <h5 class="modal-title" id="subject"><!--Aquí va la materia--></h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body bodyAse" id="bodyModalAse">
            <div class="card card-body" id="asesor"></div>
            <div class="card card-body" id="quota"></div>
            <div class="card card-body" id="days"></div>
            <div class="card card-body" id="horario"></div>
            <div class="card card-body" id="classroom"></div>
            <div class="card card-body" id="description"></div>
          </div>
          <div class="modal-footer footerAse">
            <button type="button" class="btn btn-secondary camb" data-dismiss="modal">Cerrar</button>
            <button type="button" class="btn btn-primary camb" id="soliAse">Solicitar asesoría</button>
          </div>
        </div>
      </div>
    </div>

    <% if (ases != ""){%>
      <div class="list-group">
        <% for (let adv of ases) {%>
          <div class="container" style="margin-top: 15px; padding:.5em;">
            <a href="#" class="list-group-item list-group-item-action flex-column align-items-start" style="padding:2em;">
              <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1"><%= adv.subject %></h5>
                <small><%= adv.starts%> - <%= adv.ends%></small>
              </div>
              <p class="mb-1"><%= adv.description %></p>
              <button id="<%= adv.id%>" class="btn btn-outline my-sm-0 verAse camb" style="float: right; margin-bottom: .5em;">Ver asesoría</button>
              <small><%= adv.days %></small>
            </a>
          </div>
           <!-- data-toggle="modal" data-target="#modalAse" -->
        <% } %>
      </div>
    <% } else {%>
      <div class="container" style="margin-top:40%;"><div class="alert alert-warning">No hemos encontrado ninguna asesoría ):</div><div>
    <% } %>
  </body>
  <script type="text/javascript" src="/js/EventsAdv.js"></script>
</html>
